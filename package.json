{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "run-s -n 'generate:css -- --minify'",
    "build:remix": "remix build",
    "start": "run-s dev",
    "dev": "run-p -n dev:*",
    "dev:css": "run-s -n 'generate:css -- --watch'",
    "dev:remix": "remix dev",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "lint": "run-s 'lint:*'",
    "lint:es": "eslint app --max-warnings=0",
    "lint:style": "prettier 'app/**/*.(ts|tsx)' --check",
    "lint:style:fix": "prettier 'app/**/*.(ts|tsx)' --write",
    "test": "TZ=UTC jest --maxWorkers=50%",
    "test:watch": "TZ=UTC jest --watch --maxWorkers=25%",
    "test:ci": "TZ=UTC jest --runInBand",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/vercel": "^1.15.0",
    "@vercel/node": "^2.6.2",
    "cross-fetch": "^3.1.5",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^2.0.0",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.15.0",
    "@remix-run/eslint-config": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "msw": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwindcss": "^3.3.1",
    "ts-jest": "^29.1.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  },
  "volta": {
    "node": "18.15.0"
  }
}
